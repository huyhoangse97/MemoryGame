<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/ll_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModeActivity"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/navigation"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your mode"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mode_options"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:animateLayoutChanges="true"
            >

            <RelativeLayout
                android:id="@+id/simple_mode_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/simple_mode_front_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/twinkle_blue"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/simple_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simple"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Details"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/simple_header"
                        android:text="@string/simple_mode_summary"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/try_limited_mode_container"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <RelativeLayout
                    android:id="@+id/try_limited_mode_front_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@color/twinkle_blue"
                    >
                    <TextView
                        android:id="@+id/try_limited_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try limited"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/try_limited_mode_summary"
                        android:layout_below="@+id/try_limited_header"
                        android:textSize="16sp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_limited_mode_container"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <RelativeLayout
                    android:id="@+id/time_limited_mode_front_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/twinkle_blue"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/time_limited_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time limited"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/time_limited_mode_summary"
                        android:layout_below="@+id/time_limited_header"
                        android:textSize="16sp"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/one_try_mode_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                >

                <RelativeLayout
                    android:id="@+id/one_try_mode_front_layout"
                    android:background="@color/twinkle_blue"
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/one_try_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One try"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/one_try_mode_summary"
                        android:layout_below="@+id/one_try_header"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>